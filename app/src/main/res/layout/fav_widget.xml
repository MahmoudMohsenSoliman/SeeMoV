<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:id="@+id/widget_layout"
    android:padding="@dimen/widget_margin"
    android:weightSum="3">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_weight="2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/poster_widget"
        android:layout_gravity="center"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prev_mov_widget"
        android:src="@drawable/round_arrow_back_ios_black_48"
        android:background="#fff"
        android:focusable="true"
        android:padding="8dp"
        android:layout_gravity="start|center_vertical"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_mov_widget"
        android:src="@drawable/round_arrow_forward_ios_black_48"
        android:background="#fff"
        android:focusable="true"
        android:padding="8dp"
        android:layout_gravity="end|center_vertical"/>
</FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trailer_title_widget"
            android:padding="16dp"
            android:textColor="#000"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back_widget"
                android:src="@drawable/round_skip_previous_black_48"
                android:background="#fff"
                android:focusable="true"
                android:padding="8dp"
                android:layout_gravity="start|bottom"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/play_widget"
                android:src="@drawable/round_play_arrow_black_48"
                android:background="#fff"
                android:focusable="true"
                android:padding="8dp"
                android:layout_gravity="center|bottom"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next_widget"
                android:src="@drawable/round_skip_next_black_48"
                android:background="#fff"
                android:focusable="true"
                android:padding="8dp"
                android:layout_gravity="end|bottom"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>